{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "public/js",
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules",
    "public",
    "functions"
  ]
}
